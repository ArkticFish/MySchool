@page "/register"

@using MySchool.App.Services

@inject StudentService StudentService;
@inject NavigationManager NavigationManager;
@inject JwtAuthenticationStateProvider AuthenticationStateProvider;

<h3>Login</h3>

<form @onsubmit="StudentRegister">
    <div>
        <label for="email">Name:</label>
        <input type="text" @bind-value="register.Name" />
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" @bind-value="register.Email" />
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" @bind-value="register.Password" />
    </div>
    <button type="submit">Login</button>
</form>

